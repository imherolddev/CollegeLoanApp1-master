<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="32dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:useDefaultMargins="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ronalddaugherty.collegeloanapp1.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Loan Amount"
        android:id="@+id/loanAmountTextView"

        android:layout_row="0"
        android:layout_column="8"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:paddingBottom="12dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:digits="0123456789"
        android:id="@+id/loanAmountEditText"
        android:layout_row="0"
        android:layout_column="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Interest Rate"

        android:id="@+id/interestRateTextView"
        android:layout_row="1"
        android:layout_column="8"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loanLengthSeekBar"
        android:layout_row="1"
        android:layout_column="10"
        android:layout_gravity="fill_horizontal"
        android:max="20"
        android:progress="5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Payments"
        android:id="@+id/loanLengthTextView1"

        android:layout_row="2"
        android:layout_column="10"
        android:paddingTop="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="5 Year"
        android:id="@+id/fiveYearTextView"
        android:layout_row="3"
        android:layout_column="8"
        android:paddingTop="40dp"
        android:paddingBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:text="Medium Text"
        android:background="#E8EAF6"
        android:id="@+id/fiveYearPaymentDisplay"
        android:layout_row="3"
        android:layout_column="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10 Year"
        android:id="@+id/tenYearTextView"

        android:layout_row="4"
        android:layout_column="8"
        android:layout_weight="1"
        android:paddingBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tenYearPaymentDisplay"
        android:layout_row="4"
        android:layout_column="10"
        android:background="#E8EAF6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="15 Year"
        android:id="@+id/fifteenYearTextView"

        android:layout_row="5"
        android:layout_column="8"
        android:layout_weight="1"
        android:paddingBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:background="#E8EAF6"
        android:id="@+id/fifteenYearPaymentDisplay"
        android:layout_row="5"
        android:layout_column="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="20 Year"

        android:layout_row="6"
        android:layout_column="8"
        android:layout_weight="1"
        android:id="@+id/twentyYearTextView"
        android:paddingBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:background="#E8EAF6"
        android:id="@+id/twentyYearPaymentDisplay"
        android:layout_row="6"
        android:layout_column="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="25 Year"
        android:id="@+id/twentyFiveYearTextView"
        android:layout_row="7"
        android:layout_column="8"
        android:paddingBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:background="#E8EAF6"
        android:id="@+id/twentyFiveYearPaymentDisplay"
        android:layout_row="7"
        android:layout_column="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="30 Year"
        android:id="@+id/thirtyYearTextView"
        android:layout_row="8"
        android:layout_column="8"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/thirtyYearPaymentDisplay"
        android:layout_row="8"
        android:layout_column="10"/>


</GridLayout>
